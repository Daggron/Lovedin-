<!DOCTYPE html>
<html>
<head>
    <title>
        LovedIn
    </title>
    <meta name="viewport" content="width=device-width , initial-scale=1.0">
    <meta name="Author" content="Lord Abhay Sharma Himself">
    <meta name="Description" content="A dating website">
    <meta name="keywords" content="Lovedin , Dating,Chitkara Lovedin">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Akronim&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
</head>
<body>
<% include navbar.ejs %>

<% if (users){ %>
    <aside>
        <div class="user-profile">
            <div class="user-box">
                <div class="image">
                    <img src="/<%= user.profile %>" alt="<%= user.username %>">
                </div>
                <div class="user-profile-name">
                    <p>
                        <%= user.username %>
                    </p>
                    <!-- <p>
                        <%= user.name %>
                    </p> -->
                    <p>
                        <%= user.bio %>
                    </p>
                    <ul>
                        <li>
                            <%= posts.length %>
                        </li>
                        <li>
                            <%= user.following.length %>
                        </li>
                        <li>
                            <%= user.follower.length %>
                        </li>
                    </ul>
                    <br>
                    <ul>
                        <li>
                            Post
                        </li>
                        <li>
                            Following
                        </li>
                        <li>
                            Follower
                        </li>
                    </ul>
                </div>
            </div>
            <% if(users.id==user._id){%>
            <div class="button-box">
                 <a href="update/<%=user._id%>" class="btn">Update Profile</a>
                <a href="#"  data-id="<%=user._id %>" class="btn del-account">Delete Profile</a>
            </div>
            <%} else{%>
            <a href="/users/follow/<%= user._id%>" class="///add-follower" data-id="<%= user._id%>">Follow</a>
            <% } %>
        </div>
    </aside>
    <div class="profile-box">
        <div id="post-bar">
            <h1>
                Posts by <%= user.username %>
             
            </h1>
            <hr>

        </div>
    
        <div class="profile">
            <% for(var i = posts.length - 1;i >= 0;i--){ %>
                <div class="post">
                    <div class="image">
                        <img src="/<%= posts[i].image %>">
                    </div>
                    <div class="post-date">
                        <%= posts[i].timeStamp %>
                    </div>
                    <div class="post-caption">
                        <p>
                           <span> <%= posts[i].caption %></span>
                        </p>
                    </div>

                </div>
            <% } %>
        </div>
    </div>

<% } else { %>

    <div class="container">
        <h1>Please Log in! In order to see the posts</h1>
    </div>

<% } %>


<script src="/js/del.js">
</script>